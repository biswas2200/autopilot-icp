{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "components": ["src/components"],
      "utils": ["src/lib/utils"],
      "ui": ["src/components/ui"],
      "lib": ["src/lib"],
      "hooks": ["src/hooks"]
    },
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,

    // Linting
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
// This file is used to configure TypeScript for the frontend of the autopilot-icp project.
// It specifies the compiler options, module resolution, and paths for various directories.